{
	"customInstructions": "~/.claude/CLAUDE.md",
	"permissions": {
		"allow": [
			"Bash(ls:*)",
			"Bash(cp:*)",
			"Bash(find:*)",
			"Bash(cat:*)",
			"Bash(mkdir:*)",
			"Bash(grep:*)",
			"Bash(rg:*)",
			"Bash(ss:*)",
			"Bash(git add)",
			"Bash(npm run:*)",
            "Bash(npm install:*)",
            "Bash(npm test)",
            "Bash(npm start)",
            "Bash(npm test:*)",
            "Bash(npx tsc:*)",
            "Bash(npx next build:*)",
            "Bash(npx eslint:*)",
            "Bash(git add:*)",
			"Read(~/.zshrc)"
		],
		"deny": [
			"Bash(curl:*)"
		]
	},
    "mcpServers": {
      "puppeteer": {
        "command": "npx",
        "args": ["@modelcontextprotocol/server-puppeteer"]
      }
     },
    "toolPermissions": {
      "mcp__puppeteer": "session",
      "mcp__puppeteer__puppeteer_navigate": "allow",
      "mcp__puppeteer__puppeteer_screenshot": "allow",
      "mcp__puppeteer__puppeteer_click": "session",
      "mcp__puppeteer__puppeteer_type": "session",
      "mcp__puppeteer__puppeteer_evaluate": "session"
    },
	"theme": "dark",
	"preferredNotifChannel": "terminal_bell",
    "editorMode": "vim"
}
